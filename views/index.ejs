<!DOCTYPE html>
<html>
  <head>
    <title>Student Information</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-200 font-sans">
    <div class="container mx-auto px-4 py-8">
      <div class="bg-gray-800 text-white py-4 text-center">
        <h1 class="text-2xl font-bold">Student Information</h1>
      </div>

      <table class="w-full bg-white shadow-md mt-8">
        <thead>
          <tr class="bg-gray-200">
            <th class="px-4 py-3 text-left">Image</th>
            <th class="px-4 py-3 text-left">First Name</th>
            <th class="px-4 py-3 text-left">Last Name</th>
            <th class="px-4 py-3 text-left">Student Code</th>
          </tr>
        </thead>
        <tbody>
          <% if (students.length === 0) { %>
          <tr>
            <td colspan="4" class="px-4 py-3 text-center">No data</td>
          </tr>
          <% } else { %> <% students.forEach(student => { %>
          <tr class="border-b">
            <td class="px-4 py-3 flex items-center">
              <img
                src="<%= student.image %>"
                alt="<%= student.firstName %>"
                class="w-12 h-12 mr-4 rounded-full"
              />
              <%= student.firstName %>
            </td>
            <td class="px-4 py-3"><%= student.firstName %></td>
            <td class="px-4 py-3"><%= student.lastName %></td>
            <td class="px-4 py-3"><%= student.studentCode %></td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
